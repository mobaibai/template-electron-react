{
  "name": "template-electron-react",
  "version": "0.0.1",
  "description": "A modern React template with Vite, TypeScript, Ant Design, and UnoCSS, Electron, and Electron Builder",
  "main": "./out/main/index.js",
  "author": "PureSilent",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mobaibai/template-electron-react.git"
  },
  "bugs": {
    "url": "https://github.com/mobaibai/template-electron-react/issues"
  },
  "homepage": "https://github.com/mobaibai/template-electron-react#readme",
  "license": "MIT",
  "keywords": [
    "electron",
    "react",
    "vite",
    "typescript",
    "antd",
    "unocss",
    "template"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "clean:dist": "node scripts/clean-dist.mjs",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win && npm run clean:dist",
    "build:mac": "npm run build && electron-builder --mac && npm run clean:dist",
    "build:linux": "npm run build && electron-builder --linux && npm run clean:dist",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux",
    "release": "npm run build && electron-builder --publish=always && npm run clean:dist",
    "release:win": "npm run build:win && electron-builder --win --publish=always",
    "release:mac": "npm run build:mac && electron-builder --mac --publish=always",
    "release:linux": "npm run build:linux && electron-builder --linux --publish=always",
    "release:all": "npm run build:all && electron-builder --publish=always && npm run clean:dist"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@iconify/json": "^2.2.359",
    "@react-spring/web": "^10.0.1",
    "@react-three/drei": "^10.5.1",
    "@react-three/fiber": "^9.2.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/three": "^0.178.1",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "antd": "^5.26.5",
    "axios": "^1.10.0",
    "classnames": "^2.5.1",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "electron": "^37.2.2",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.0",
    "eslint": "^9.29.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "getmac": "^6.6.0",
    "nanoid": "^5.1.5",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "react-to-print": "^3.1.1",
    "sass": "^1.89.2",
    "svgo": "^4.0.0",
    "svgstore": "^3.0.1",
    "swr": "^2.3.4",
    "terser": "^5.43.1",
    "three": "^0.178.0",
    "typescript": "^5.8.3",
    "unocss": "^66.3.3",
    "vite": "^7.0.4",
    "zustand": "^5.0.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
